<h3 class="aside-title">@Model.Value.Header</h3>
@for (int i = 0; i < Model.Value.CharacteristicsPoints.Count; i++)
{
	<div class="checkbox-filter">
		<div class="input-checkbox">
			@if (Convert.ToBoolean(Model.Value.CharacteristicsPoints[i].Meaning))
			{
				<input type="checkbox" name="@Model.Key-@i" id="@Model.Key-@i" value="true" checked>
			}
			else
			{
				<input type="checkbox" name="@Model.Key-@i" id="@Model.Key-@i" value="true">
			}
			<label for="@Model.Key-@i">
				<span></span>
				@Model.Value.CharacteristicsPoints[i].Name
			</label>
		</div>
	</div>
}